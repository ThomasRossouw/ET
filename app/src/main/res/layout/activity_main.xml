<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#545454"
    tools:context=".MainActivity">

    <!--        android:textColor=""-->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="32sp"
        android:text="Enter the Bill" />

    <EditText
        android:id="@+id/et_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:drawableBottom="@drawable/gradient"
        android:ems="10"
        android:hint="100.00"
        android:inputType="numberDecimal"

        android:text=""
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:text="Tip %" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/b_tip_minus"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="@color/red"
            android:text="-"
            android:textSize="32sp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="32sp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="0%" />


        <Button
            android:id="@+id/b_tip_plus"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="@color/green"
            android:text="+"
            android:textSize="32sp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:text="Number of People" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/b_people_minus"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="@color/red"
            android:text="-"
            android:textSize="32sp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_people"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="32sp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="1" />


        <Button
            android:id="@+id/b_people_plus"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textColor="@color/green"
            android:textSize="32sp"

            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button

        android:id="@+id/b_calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Calculate"
        android:textColor="@color/white"
        android:background="@drawable/gradient"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_marginTop="20dp"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="Tip" />

    <TextView
        android:id="@+id/tv_tip_output"
        android:layout_marginTop="20dp"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/back"
        android:text="Press Calculate" />

    <TextView
        android:id="@+id/textView5"
        android:layout_marginTop="20dp"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="Total" />

    <TextView
        android:id="@+id/tv_total_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Press Calculate"
        android:textColor="@color/back"
        android:textSize="24dp" />


</LinearLayout>